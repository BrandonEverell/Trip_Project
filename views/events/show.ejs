<%- include('../partials/header') %>
<div class="container col-md-12 flex-direction: row align-content: flex-start">

  <div class="col-md-3 sideBar ">
  <div class="card">
    <div class="card-body">
      <h2 class="card-header"><strong> <%= event.title %></strong> </h2>
      <h5> <%=event.date%> </h5>
      <a class="card-link" href="/events/<%=event.id%>/newPost"> Create  New Post </a>
    </div>

    <div class="card-header">
      <h4>Event Details</h4>
    </div>
    <div class="card-body">
      <p> <%= event.description %> </p>
    </div>
    <div class="card-header">
      <h4>Members</h4>
    </div>
    <ul class="list-group">
    <% attendees.forEach(attendee => { %>
        <li class="list-group-item list-group-item-action"><strong><%= attendee.first_name %> <%= attendee.last_name %></strong></li>
      <% }) %>
      </ul>
    </div>
    </div>


<% for (let post of posts) { %>
  <div class="col-md-9 postsIndex">
    <div class="card">
      <div class="card-header">
        <strong><%= post.title %></strong>
      </div>
      <div class="card-body">
        <p class="card-text">
          <%= post.content %>
        </p>
      </div>
      <a href="/events/<%= event.id%>/posts/<%= post.id %>">
        <img class="card-img" src="<%= post.photo_path %>">
      </a>
    </div>
  </div>

<% } %>








</div>

<%- include('../partials/footer') %>
