<%- include('../partials/header') %>

<div class="col-sm-8 ">
  <div class="card">
    <div class="card-header d-flex align-items-center">
        <strong><%= post.title %></strong>
        </div>
          <a href="/posts/<%= post.id %>">
            <img class="card-img" src="<%= post.photo_path %>">
          </a>
        <div class="card-body">
          <p class="card-text">
            <%= post.content %>
          </p>
    </div>
  </div>
</div>



