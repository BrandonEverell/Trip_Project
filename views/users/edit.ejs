<%- include('../partials/header') %>

   <div class="container col-md-11">

     <div class="card ">
     <div class="card-header text-center ">
     <h3>  Update your Account </h3>
     </div>

     <form class="flex-direction: column col-md-9" action="/users/<%=users.id%>?_method=PATCH" enctype="multipart/form-data" method="POST">
       <div class="form-group row">
         <label for="firstName" class="col-sm-2 col-form-label">First Name</label>
         <div class="col-sm-10">
           <input type="text" name="first_name" class="form-control" id="firstName" placeholder="First Name">
         </div>
       </div>

       <div class="form-group row">
         <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
         <div class="col-sm-10">
           <input type="text" name="last_name" class="form-control" id="lastName" placeholder="Last Name">
         </div>
       </div>

       <div class="form-group row">
             <label for="email" class="col-sm-2 col-form-label">Email</label>
             <div class="col-sm-10">
               <input type="email" name="email" class="form-control" id="email" placeholder="Email">
             </div>
           </div>

           <div class="form-group row">
             <label for="about" class="col-sm-2 col-form-label">About</label>
             <textarea
             id="about"
             class="form-control"
             rows='5'
             name="about"
             placeholder="Information about you"
             ></textarea>
           </div>

           <div class="form-group row">
          <input
            id="avatar"
            class="form-control"
            name="photo"
            type="file"
          />
        </div>

       <div class="form-group row">
         <div class="col-sm-10">
           <button type="submit" class="btn btn-outline-primary">Update</button>
         </div>
       </div>
     </form>
   </div>



   <%- include('../partials/footer') %>
